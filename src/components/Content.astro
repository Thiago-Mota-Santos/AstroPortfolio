---
export interface Props {
  cover_image: string;
  title: string;
  description: string;
  user: User;
  url: string;
  posted_on: string;
  public_reactions_count?: string;
  comments_count?: string;
  postType: "article" | "github"
}

export interface User {
  name: string;
  profile_image: string;
}

const { 
    cover_image, 
    title, 
    description, 
    url, 
    public_reactions_count,
    comments_count,
    postType
} = Astro.props;

---
    <div
      class="border-2 bg-black border-gray-200 border-opacity-60 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-150 ease-linear hover:border-4 hover:border-purple-500 "
    >
      <div class="relative">
        <img
          src={cover_image}
          alt={title}
          class="lg:h-48 md:h-36 w-full object-cover object-center"
        />
        <div class="absolute inset-0 rounded-lg bg-gradient-to-t from-black to-transparent" />
      </div>

      <div class="p-6">
        {postType === 'github' ? <svg class="mb-1" viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
        ><path
          fill="currentColor"
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
