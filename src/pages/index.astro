---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Profile from '../components/Profile.astro';
import ContentList from '@/components/ContentList.astro';
import { projects, openSource } from '@/content/content';
import Header from '@/components/Header.astro';
import AstroLayout from '@/layouts/AstroLayout.astro';

const response = await fetch ('https://dev.to/api/articles?username=thiagomotasantos');
const data = await response.json();
const content = data


---

<AstroLayout>
<html lang="en">
	<head> 
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="h-screen w-screen">
			<Profile />
			<section id="articles" class="mt-16">
				<h1 class="text-4xl text-white font-bold mb-8">
				  Projects
				</h1>
				<ContentList content={projects}/>
			</section>

			<section id="articles" class="mt-16">
				<h1 class="text-4xl text-white font-bold mb-8">
				  Open Source
				</h1>
				<ContentList content={openSource}/>
			</section>
	
			<section id="articles" class="mt-16">
				<h1 class="text-4xl text-white font-bold mb-8">
				  Articles
				</h1>
				<ContentList content={content}/>
			</section>
		<Footer />
		</main>
	</body>
</html>
</AstroLayout>
