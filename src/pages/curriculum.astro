---
import * as CONTENT from "../content/content"
import Container from "../components/Container.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION } from "@/consts";
import BaseHead from "@/components/BaseHead.astro";
import Icon from "astro-icon";
import pdf from '../pdf/CV - Thiago Mota dos Santos (eng).pdf'


export const prerender = true
---
<html lang="en">
	<head>
		<BaseHead title={CONTENT.name} description={SITE_DESCRIPTION} />
	</head>
	
	<body>
		<Header />
		<div class="flex items-center justify-center mt-10">
			<button type="button" class="flex items-center w-50 h-30 text-gray-900 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-gray-600 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-800">				
				<Icon class="w-6 h-6" name="ic:baseline-download"/>
				<a class="text-gray-200" href={pdf} download="Thiago CV">CV DOWNLOAD</a> 
			</button>
		</div>
		<!-- Bar Effect -->
	
		<main class="mx-auto flex-grow h-screen  max-h-[90vh] md:max-h-[70vh] max-w-3xl overflow-y-scroll grid gap-5 p-5 w-[95vw]">
			<Container />
		</main>

		<Footer />
	</body>
</html>


<style is:global>
	*{
		transition: 350ms ease-in-out;
		font-family: 'Manrope', sans-serif;
	}

	@media only screen and (max-width: 480px){
		*{
			font-size: 12px;
		}
	}

	 /* For webkit-based browsers */
	.overflow-y-scroll::-webkit-scrollbar {
		width: 3px;
	}

	.overflow-y-scroll::-webkit-scrollbar-thumb {
		background-color:#50595e;
	}

	/* For Firefox */
	.overflow-y-scroll {
		scrollbar-width: 1px;
	}
</style>
